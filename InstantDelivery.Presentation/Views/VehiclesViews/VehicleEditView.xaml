<controls:MetroWindow x:Class="InstantDelivery.Views.VehicleEditView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Height="500" Width="450" WindowStartupLocation="CenterOwner"
        Style="{StaticResource DialogWindow}" >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Numer rejestracyjny:" Grid.Column="0" Grid.Row="0"  Style="{StaticResource EditDialogLabel}" />
        <TextBox Grid.Column="1" Grid.Row="0" x:Name="Vehicle_RegistrationNumber" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Marka:" Grid.Column="0" Grid.Row="1"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="1" x:Name="Vehicle_Brand" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Model:" Grid.Column="0" Grid.Row="2"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="2" x:Name="Vehicle_Model" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Ładowność:" Grid.Column="0" Grid.Row="3"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="3" x:Name="Vehicle_Payload" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Wymiar X:" Grid.Column="0" Grid.Row="4"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="4" x:Name="Vehicle_AvailableSpaceX" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Wymiar X:" Grid.Column="0" Grid.Row="5"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="5" x:Name="Vehicle_AvailableSpaceY" Style="{StaticResource EditDialogTextBox}" />

        <Label Content="Wymiar X:" Grid.Column="0" Grid.Row="6"  Style="{StaticResource EditDialogLabel}"  />
        <TextBox Grid.Column="1" Grid.Row="6" x:Name="Vehicle_AvailableSpaceZ" Style="{StaticResource EditDialogTextBox}" />

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Grid.Column="0" FlowDirection="RightToLeft" Orientation="Horizontal">
            <Button x:Name="Cancel" Style="{StaticResource EditDialogButton}" Content="Anuluj" />
            <Button x:Name="Save" Style="{StaticResource VehicleEditSaveButton}" Content="Zapisz" />
        </StackPanel>
    </Grid>
</controls:MetroWindow>


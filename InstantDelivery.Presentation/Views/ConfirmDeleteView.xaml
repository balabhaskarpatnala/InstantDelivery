<controls:MetroWindow x:Class="InstantDelivery.Views.ConfirmDeleteView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        Background="White"
        Height="150" Width="400" WindowStartupLocation="CenterOwner"
        BorderBrush="{DynamicResource AccentColorBrush}" BorderThickness="2" ShowTitleBar="False" ShowIconOnTitleBar="False" ShowMinButton="False" ShowMaxRestoreButton="False" ShowSystemMenuOnRightClick="False" ShowCloseButton="False" >
    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" HorizontalAlignment="Center" Content="Czy na pewno chcesz usunąć?"></Label>
        <Button Grid.Row="1" Height="20" Width="60" Grid.Column="0" x:Name="Remove" Style="{StaticResource EditDialogButton}" Content="TAK" />
        <Button Grid.Row="1" Height="20" Width="60" Grid.Column="1" x:Name="Cancel" Style="{StaticResource EmployeeEditSaveButton}" Content="NIE" />
    </Grid>
</controls:MetroWindow>
